<% flash.each do | message_type, message_content | %>
  <div class="ui <%= message_type %> message transition">
  <i class="close icon"></i>
  <% if message_type == 'error'%>
    <div class="header">
      There were some errors
    </div>
  <% end %>
  <ul class="list">
    <li><%= message_content %></li>
  </ul>
</div>
<% end %>
