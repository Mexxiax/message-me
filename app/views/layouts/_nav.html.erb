<div class="ui tiny stackable inverted menu"
     style="border-radius: 0; padding-right: 15px; padding-left: 15px;">
  <%= link_to 'Chatroom', root_path, class: 'item' %>
  <a class="item">
    Messages
  </a>
  <div class="right menu">
    <div class="ui dropdown item">
      Account <i class="dropdown icon"></i>
      <div class="menu">
        <% if logged_in? %>
          <%= link_to 'Log Out', logout_path, class: 'item', method: :delete %>
        <% else %>
          <%= link_to 'Log In', login_path, class: 'item' %>
        <% end %>
      </div>
    </div>
    <% if !logged_in? %>
      <div class="item">
        <%= link_to 'Log In', login_path, class: 'ui primary button' %>
      </div>
    <% end %>
  </div>
</div>